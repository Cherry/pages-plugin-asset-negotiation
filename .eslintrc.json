{
	"root": true,
	"extends": [
		"@nodecraft",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"plugins": [
		"json",
		"node",
		"unicorn",
		"@typescript-eslint"
	],
	"rules": {
		"node/no-unsupported-features/es-syntax": "off",
		"node/no-missing-import": "off"
	}
}